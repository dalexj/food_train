<ul class="list-group col-md-4 col-md-offset-4" style="float:left;">
  <li class="list-group-item"><h4>Groups</h4></li>
  <% @groups.each do |group| %>
    <li class="list-group-item"><%= link_to group.name, group_path(group), class: "btn" %></li>
  <% end %>
  <li style="list-style:none;"><%= link_to "Create a new group", "#", class: "btn btn-default", style: "margin:10px 0px;" %></li>
</ul>
