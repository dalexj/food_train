<div class="panel panel-info">
  <div class="panel-heading">
    <center>
    <h1><%= @group.name %></h1>
    <h3>Owner: <%= @group.owner.try(:full_name) %></h3>
    </center>
  </div>



  <div class="panel-body">

  <div class="col-md-4 col-md-offset-1">
    <center><h4>Members</h4></center>
    <ul class="list-group">
      <% @group.users.each do |user| %>
        <li class="list-group-item"><%= user.full_name %></li>
      <% end %>
    </ul>
  </div>


  <% @group.trains.each do |train| %>
  <div class="col-md-6 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">Where ya wanna eat bruh?</div>
      <ul class="list-group">
        <% train.train_options.each do |option| %>
          <li class="list-group-item vote-group-item"><a href="#" class="vote-item">Vote for the <%= option.place %> Train</a></li>
        <% end %>
      </ul>
    </div>
  </div>

  <% end %>
  </div>


</div>
