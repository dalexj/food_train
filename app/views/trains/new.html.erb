<div class="panel panel-info">
  <div class="panel-header">
    <center><h1>Start a train</h1></center>
  </div>
  <div class="panel-body">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for @train, url: group_trains_path do |f| %>
        <%= f.fields_for :train_options, @train_options do |ff| %>
          <h4>Option <%= ff.options[:child_index] + 1 %></h4>
          <%= ff.text_field :place %>
        <% end %>
        <%= f.submit "Start the train", class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>
