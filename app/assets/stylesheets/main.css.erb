img.backwards {
  -moz-transform: scaleX(-1);
  -o-transform: scaleX(-1);
  -webkit-transform: scaleX(-1);
  transform: scaleX(-1);
  filter: FlipH;
  -ms-filter: "FlipH";
}

.header-container {
  margin: 20px 40px;
}

.nav-color-change {
  background-color: rgba(255,255,255,0.9);
}

.vote-item {
  text-decoration: none !important; /* DEAL WITH IT */
  color: black !important; /* DEAL WITH IT */
  display: block;
  padding: 10px 15px;
  margin: inherit;
  background: inherit;
  border: inherit;
  width: 100%;
  text-align: left;
}

.vote-item:hover {
  background-color: #eee;
}

.vote-item:active {
  background-color: yellow;
}

.vote-group-item {
  padding: 0 !important;
}


h1 {
  font-family: 'Ubuntu', Helvetica, Arial, sans-serif;
  font-size: 50px;
  line-height: 65px;
}

body {
  font-family: 'Vollkorn', Georgia, Times, serif;
  font-size: 16px;
  line-height: 25px;
  background: url(<%= asset_path "train-tracks.jpg" %>) no-repeat bottom center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

.flash-messages {
  color: #5cb85c;
  position: fixed;
  top: 15px;
  left: 46%;
  text-transform: uppercase;
  z-index: 9999;
}

.splash-window {
  background: rgba(200, 200, 200, 0.8);
  text-align: center;
  border-radius: 30px;
}

.splash-window-flash {
  width: 15%;
  margin: 150px 100px;
  padding: 5px;
  text-align: right;
  float: left;
}

.splash-window-main {
  padding: 20px;
  margin: 300px auto;
  width: 40%
}

.ubuntu {
  font-family: 'Ubuntu', Helvetica, Arial, sans-serif;
}

.tooltip {
  background-color: white;
  font-family: 'Ubuntu', Helvetica, Arial, sans-serif;
}
